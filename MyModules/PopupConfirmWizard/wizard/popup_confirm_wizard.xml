<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="popup_confirm_wizard" model="ir.ui.view">
    <field name="name">Confirm</field>
        <field name="model">popup.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm" version="7.0">
                <group>
                    <field name="name"/>
                    <field name="message" nolabel="1"/>
                </group>
                <footer>
                    <button name="wizard_confirm" string="Yes" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>